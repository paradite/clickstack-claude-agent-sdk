# Production Environment Configuration
# Copy to .env.prod and update with secure values
# Generate passwords: openssl rand -base64 32

# Docker image version
IMAGE_VERSION=2

# HyperDX ports and URL
HYPERDX_API_PORT=8000
HYPERDX_APP_PORT=8080
HYPERDX_APP_URL=http://localhost
HYPERDX_OPAMP_PORT=4320
HYPERDX_OTEL_EXPORTER_CLICKHOUSE_DATABASE=default
HYPERDX_LOG_LEVEL=info

# MongoDB credentials
MONGO_ROOT_USERNAME=mongoadmin
MONGO_ROOT_PASSWORD=CHANGE_ME

# ClickHouse credentials
CLICKHOUSE_USER=clickstack
CLICKHOUSE_PASSWORD=CHANGE_ME
CLICKHOUSE_WORKER_PASSWORD=CHANGE_ME
